<div class="container">
  <h1>Edit Message</h1>

  <%= form_with model: @message, local: true do |f| %>
    <%= f.label :chat_id, "Chat" %><br>
    <%= f.select :chat_id, Chat.all.collect { |c| ["Chat #{c.id}", c.id] }, prompt: "Select a Chat" %><br><br>

    <%= f.label :user_id, "Author" %><br>
    <%= f.select :user_id, User.all.collect { |u| [u.email, u.id] }, prompt: "Select an author" %><br><br>

    <%= f.label :body, "Mesagge Content" %><br>
    <%= f.text_area :body %><br><br>

    <%= f.submit "Edit Mensaje" %>
  <% end %>

  <% if @message.errors.any? %>
    <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</div>
