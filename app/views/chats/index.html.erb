<div class="container">
    <h1>Chats here</h1>
    <h2>Chats List</h2>
    <%= link_to "New Chat", new_chat_path %>
</div>
<div class="container">
    <table class="table">
        <tr>
            <td scope="col">ID</td>
            <td scope="col">User 1 name</td>
            <td scope="col">User 2 name</td>
            <td scope="col">Actions</td>
        </tr>
        <% chats = chats.order(:id) %>
        <% chats.each do |chat| %>
        <tr>
            <td scope="col"><%= chat.id %></td>
            <td scope="col"><%= chat.sender.first_name %> <%= chat.sender.last_name %></td>
            <td scope="col"><%= chat.receiver.first_name %> <%= chat.receiver.last_name %></td>
            <td scope="col">
            <p><%= link_to "Show", chat_path(chat) %></p>
            </td>
            <% if current_user.admin? %>    
                <td scope="col">
                    <p><%= link_to "Edit", edit_chat_path(chat) %></p>
                </td>
            <% end %>
        </tr>
        <% end %>
    </table>
</div>


