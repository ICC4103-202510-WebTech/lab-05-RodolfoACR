<h1>Users here</h1>
<h2>Users List</h2>

<% users.each do |user| %>
    <div>
        <p><%= link_to "User #{user.id}", user_path(user) %></p>
        <table>
            <tr>
                <td>First Name:</td>
                <td><%= user.first_name %></td>
            </tr>
                <tr>
                <td>Last Name:</td>
                <td><%= user.last_name %></td>
            </tr>
                <tr>
                <td>Email:</td>
                <td><%= user.email %></td>
            </tr>
        </table>
        <p>-------------------------------------------------------</p>
    </div>
<% end %>
